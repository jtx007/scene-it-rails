<style>
body, html, .parallax {
  height: 100%;
}

.parallax {
    /* The image used */
    background-image: url("https://wallpapercave.com/wp/hTDD0QO.jpg");




    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}
</style>
<!-- https://image.tmdb.org/t/p/w500/ -->
<div class="parallax">
<div class="card-columns">
  <%  @movies.each do |movie| %>
    <div class="card" style="width: 18rem;">
      <%= link_to movie_path(movie) do %>
        <img class="card-img-top" src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path%>" class="img-fluid" alt="movie-poster" alt="Card image cap">
      <% end %>
      <div class="card-body">
        <p class="card-text"><%= movie.description %></p>
      </div>
    </div>
  <% end%>
</div>
</div>
